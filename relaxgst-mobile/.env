# Mobile App Environment Configuration for RelaxGST.ai

# API Configuration
API_BASE_URL=http://localhost:5000/api
API_TIMEOUT=30000

# App Configuration
APP_NAME=RelaxGST
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# Authentication
JWT_SECRET=your-jwt-secret-key
TOKEN_EXPIRY=86400000
AUTO_REFRESH_TOKEN=true

# Database Configuration
SQLITE_DB_NAME=relaxgst.db
SQLITE_DB_VERSION=1

# File Storage
MAX_FILE_SIZE=10485760
CACHE_SIZE=100
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png

# Camera & Document Scanner
ENABLE_CAMERA=true
ENABLE_DOCUMENT_SCANNER=true
SCAN_QUALITY=0.8

# GST Configuration
GST_API_URL=https://api.gst.gov.in
GST_PORTAL_URL=https://www.gst.gov.in
ENABLE_OFFLINE_GST_LOOKUP=false

# Push Notifications
PUSH_NOTIFICATIONS_ENABLED=true
FCM_SERVER_KEY=your-fcm-server-key
APNS_CERTIFICATE_PATH=./ios/RelaxGST/Certificates.p12

# Deep Linking
DEEP_LINK_SCHEME=relaxgst
UNIVERSAL_LINK_DOMAIN=relaxgst.ai

# Analytics & Crash Reporting
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
MIXPANEL_TOKEN=your-mixpanel-token
SENTRY_DSN=your-sentry-dsn

# Offline Support
ENABLE_OFFLINE_MODE=true
SYNC_INTERVAL=300000
MAX_OFFLINE_RECORDS=1000

# UI Configuration
THEME_PRIMARY_COLOR=#007AFF
THEME_SECONDARY_COLOR=#5856D6
ENABLE_DARK_MODE=true

# Performance
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_MEMORY_MONITORING=false

# Development
DEBUG_MODE=true
LOG_LEVEL=debug
ENABLE_REDUX_DEVTOOLS=true
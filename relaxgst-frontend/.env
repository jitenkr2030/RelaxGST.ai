# Frontend Environment Configuration for RelaxGST.ai

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_BASE_URL=http://localhost:5000

# App Configuration
REACT_APP_NAME=RelaxGST.ai
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Authentication
REACT_APP_JWT_SECRET=your-jwt-secret-key
REACT_APP_TOKEN_EXPIRY=86400000

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png

# GST Configuration
REACT_APP_GST_API_URL=https://api.gst.gov.in
REACT_APP_GST_PORTAL_URL=https://www.gst.gov.in

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# Third-party Services
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
REACT_APP_SENTRY_DSN=your-sentry-dsn

# Mobile App Integration
REACT_APP_DEEP_LINK_SCHEME=relaxgst
REACT_APP_UNIVERSAL_LINK_DOMAIN=relaxgst.ai

# Development Tools
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug